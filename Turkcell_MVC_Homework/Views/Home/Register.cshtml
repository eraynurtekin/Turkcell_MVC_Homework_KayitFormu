@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Volunteer

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>PetLover - Pet Care Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/Pets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link href="~/Pets/https://fonts.googleapis.com/css2?family=Nunito+Sans&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link href="~/Pets/https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Flaticon Font -->
    <link href="~/Pets/lib/flaticon/font/flaticon.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Pets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Pets/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Pets/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-lg-5">
          
            
                <div class="d-inline-flex align-items-center">
                    <a class="text-white px-3" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-white px-3" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-white px-3" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-white px-3" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-white pl-3" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
          
        </div>
        <div class="row py-3 px-lg-5">
            <div class="col-lg-4">
                <a href="" class="navbar-brand d-none d-lg-block">
                    <h1 class="m-0 display-5 text-capitalize"><span class="text-primary">Sevimli</span>Patiler</h1>
                </a>
            </div>
            <div class="col-lg-8 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <div class="d-inline-flex flex-column text-center pr-3 border-right">
                        <h6>Etkinlik Saati</h6>
                        <p class="m-0">10.00 - 14.00</p>
                    </div>
                    <div class="d-inline-flex flex-column text-center px-3 border-right">
                        <h6>Email</h6>
                        <p class="m-0">eray.nurtekin@example.com</p>
                    </div>
                    <div class="d-inline-flex flex-column text-center pl-3">
                        <h6>Telefon</h6>
                        <p class="m-0">+90 123 432 34 21</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->


    <!-- Booking Start -->
    <div class="container-fluid">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <div class="bg-primary py-5 px-4 px-sm-5">
                        <form class="py-5" method="post">
                            <div class="form-group">
                                <input asp-for="Name"  class="form-control border-0 p-4" placeholder="İsminiz" required="required" />
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Surname"  class="form-control border-0 p-4" placeholder="Soyadınız" required="required" />
                                <span asp-validation-for="Surname"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control border-0 p-4" placeholder="Email Adresiniz" required="required" />
                            <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Age" class="form-control border-0 p-4" placeholder="Yaşınız" required="required" />
                            <span asp-validation-for="Age"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Telephone" class="form-control border-0 p-4" placeholder="Tel No" required="required" />
                                <span asp-validation-for="Telephone"></span>
                            </div>
                          
                          
                            <div>
                                <button class="btn btn-dark btn-block border-0 py-3" type="submit">Kayıt Ol</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-7 py-5 py-lg-0 px-3 px-lg-5">
                   
                    <h1 class="display-4 mb-4">Dostlarımıza <span class="text-primary">Destek Olur Musun</span></h1>
                    <p>Hayvanların, daha refah bir ortamda yaşamaları için beslenmesi, bakımı, korunması, tedavisi ve yasal haklarının savunulmasına yönelik doğrudan veya dolaylı çalışmalar yapmaktır.</p>
                    <div class="row py-2">
                        <div class="col-sm-6">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-2">
                                    <h1 class="flaticon-house font-weight-normal text-secondary m-0 mr-3"></h1>
                                    <h5 class="text-truncate m-0">Barınak Desteği</h5>
                                </div>
                                <p>Sokak hayvanlarımıza sıcak bir yuva desteği veriyoruz</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-2">
                                    <h1 class="flaticon-food font-weight-normal text-secondary m-0 mr-3"></h1>
                                    <h5 class="text-truncate m-0">Mama Desteği</h5>
                                </div>
                                <p>Dostlarımıza her türlü mama desteğini derneğimiz vermektedir.</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-2">
                                    <h1 class="flaticon-grooming font-weight-normal text-secondary m-0 mr-3"></h1>
                                    <h5 class="text-truncate m-0">Bakım Hizmeti</h5>
                                </div>
                                <p class="m-0">Barınaktaki dostlarımızın kişisel temizliklerini düzenli olarak yapıyoruz</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center mb-2">
                                    <h1 class="flaticon-toy font-weight-normal text-secondary m-0 mr-3"></h1>
                                    <h5 class="text-truncate m-0">Yaşam Hakkı</h5>
                                </div>
                                <p class="m-0">Hayvan Hakları Evrensel Beyannamesi’ni kendisine ilke edinen derneğimiz ile sokak hayvanları haklarını koruyoruz.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Booking Start -->



    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="~/Pets/https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="~/Pets/https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/Pets/lib/easing/easing.min.js"></script>
    <script src="~/Pets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Pets/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Pets/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Pets/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/Pets/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/Pets/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/Pets/js/main.js"></script>
</body>

</html>